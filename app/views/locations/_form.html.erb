<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :zip_code %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :address %>
    <%= f.input :details %>
    <%= f.association :ride %>
    <%= f.association :job %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
